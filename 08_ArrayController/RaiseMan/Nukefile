;; Nukefile for RaiseMan

;; source files
(set @nu_files 	   (filelist "nu/.*\.nu$"))
(set @resources      (filelist "^English\.lproj/InfoPlist.strings$"))
(@resources unionSet:(filelist "^English\.lproj/Credits.rtf$"))
(set @nib_files  (filelist "^English\.lproj/[^/]*\.nib$"))

;; specify the document type, this will be added into the standard Info.plist generated by nuke.
(set @info
     (dict "CFBundleDocumentTypes"
           (array (dict "CFBundleTypeName" "DocumentType"
                        "CFBundleTypeRole" "Editor"
                        "NSDocumentClass" "MyDocument"))))

;; application description
(set @application "RaiseMan")
(set @application_identifier   "nu.programming.raiseman")

;; build tasks
(application-tasks)
(task "default" => "application")
